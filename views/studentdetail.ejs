<%- include('./base/header.ejs') %>
  <div class="container">
    <div class="alert bg-success my-3">
      <h4 class="text-center " style="color: #fff;">Student List</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <table class="table text-center">
        <thead>
          <tr>
            <th>RollNo</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Father Name</th>
            <th>Aadhar Card</th>
            <th>Mobile No</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% students.forEach((student)=>{ %>
          <tr>
            <td>
              <%= student.rollNo %>
            </td>
            <td>
              <%= student.firstName %>
            </td>
            <td>
              <%= student.lastName %>
            </td>
            <td>
              <%= student.fatherName %>
            </td>
            <td>
              <%= student.aadharCardNo %>
            </td>
            <td>
              <%= student.mobileNo %>
            </td>
            <td>
              <a href="/student/edit/page/<%= student._id %>" class="btn btn-warning w-55">Edit</a>
              <a href="/delete/student<%= student._id %>" class="btn btn-danger> w-45">Edit</a>
            </td>
          </tr>
          <% })%>
      </table>
    </div>
  </div>

  <%- include('./base/footer.ejs') %>